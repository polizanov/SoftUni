<main>
    <div class="container">
        <h1 class="my-4">Course title : {{data.title}}
        </h1>

        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid" src="{{data.imageUrl}}" alt="{{data.imageUrl}}" />
            </div>

            <div class="col-md-4 text-center">
                <h3 class="my-3">Course Description</h3>
                <p>{{data.description}}</p>

                {{#if data.isOwner}}
                    <a class="btn btn-danger" href="/course/delete/{{data._id}}">Delete</a>
                    <a class="btn btn-warning" href="/course/update/{{data._id}}">Edit</a>
                {{else}}
                    {{#if data.isEnroll}}
                        <span class="enrolled-span">You are already enrolled</span>
                    {{else}}
                        <a class="btn btn-primary" href="/course/enroll/{{data._id}}">Enroll</a>
                    {{/if}}
                {{/if}}
               
            </div>
        </div>
    </div>
</main>